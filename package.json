{
  "name": "@dompile/cli",
  "version": "0.5.2",
  "description": "A lightweight, framework-free static site generator with Apache SSI-style includes and live reload",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "dompile": "bin/cli.js"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "watch": "node bin/cli.js watch --source example/src --output example/dist",
    "serve": "node bin/cli.js serve --source example/dist --port 3000",
    "example": "npm run build && npm run serve",
    "build": "node bin/cli.js build --source example/src --output example/dist"
  },
  "keywords": [
    "static-site-generator",
    "html",
    "includes",
    "ssi",
    "build-tool",
    "frontend",
    "development",
    "live-reload"
  ],
  "author": "DOMpile Contributors",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dompile/cli.git"
  },
  "bugs": {
    "url": "https://github.com/dompile/cli/issues"
  },
  "homepage": "https://github.com/dompile/cli#readme",
  "dependencies": {
    "chokidar": "^3.5.3",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0"
  },
  "files": [
    "bin/",
    "src/",
    "README.md"
  ]
}
